<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity"
    android:background="@color/primaryDarkColor"

    >

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/app_login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140sp"
        />


    <EditText
        android:id="@+id/userid_input_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_logo"

        android:padding="10dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_marginTop="180dp"
        android:background="@color/primaryTextColor"
        android:textSize="25sp"
        android:textColor="#000000"
        android:hint="UserID"
        android:textColorHint="@color/primaryLightTexthintColor"
        />

    <EditText
        android:id="@+id/password_input_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userid_input_signin"

        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:layout_marginTop="20dp"
        android:background="@color/primaryTextColor"
        android:textSize="25sp"
        android:textColor="#000000"
        android:hint="Password"
        android:textColorHint="@color/primaryLightTexthintColor"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/app_signin_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_input_signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:onClick="Login"
        android:background="@drawable/button_signin"
        android:textSize="30sp"
        android:textColor="#000000"
        android:text="sign in"
        />
</RelativeLayout>
</ScrollView>