<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dip"></corners>
            <stroke
                android:width="1dip"
                android:color="#5e7974">
            </stroke>
            <gradient
                android:angle="-90"
                android:startColor="#345953"
                android:endColor="#689a92"
                >
            </gradient>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dip"></corners>
            <stroke
                android:width="1dip"
                android:color="@color/colorGrey">
            </stroke>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dip"></corners>
            <stroke
                android:width="1dip"
                android:color="@color/colorOrange">
            </stroke>
            <solid android:color="@color/colorOrange"></solid>
        </shape>
    </item>
</selector>